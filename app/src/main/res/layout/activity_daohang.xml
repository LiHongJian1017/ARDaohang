<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daohang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FF2449C2"
    android:paddingTop="10dp"
    tools:context="com.amap.navi.daohang.DaohangActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <AutoCompleteTextView
            android:id="@+id/search_input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:hint="从我的位置 "
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/shape_textcursor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />
        <AutoCompleteTextView
            android:id="@+id/search_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:hint="请输入终点 "
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/shape_textcursor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.amap.api.maps.MapView
            android:id="@+id/navi_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
