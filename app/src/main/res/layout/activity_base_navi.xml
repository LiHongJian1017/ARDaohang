<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_base_navi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amap.navi.daohang.Basic.BaseActivity">
    <com.amap.api.navi.AMapNaviView
        android:id="@+id/navi_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/scan"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navixinxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF262626"
            android:visibility="gone">

            <TextView
                android:text="30米"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="25dp"
                android:id="@+id/mi"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/sou9"
                android:id="@+id/lubiao"
                android:layout_marginLeft="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/mi"
                android:layout_marginTop="24dp" />

            <TextView
                android:text="进入"
                android:textColor="#FFFFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mi"
                android:layout_toEndOf="@+id/lubiao"
                android:layout_marginStart="30dp"
                android:id="@+id/textView2" />

            <TextView
                android:textColor="#FFFFFFFF"
                android:textSize="30sp"
                android:text="无名路"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView2"
                android:id="@+id/luming"
                android:layout_alignTop="@+id/mi"
                android:layout_marginRight="22dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginStart="25dp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
